@page
@model SparkAuto.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<br />
<h2 class="text-info">Delete Car</h2>
<br />

<form method="post">
    <div class="border backgroundwhite">
        <input hidden asp-for="Car.Id" />
        <input hidden asp-for="Car.UserId" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" class="form-control" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <button asp-page-handler="Delete" asp-route-id="@Model.Car.Id" onclick="return confirm('Are you sure want to delete?')" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }}
}

